@if !ItemTook
    Player: "Looks like it won't be easy"
    Player: "Am i ready?"
    @hidePrinter
    @showUI PlayerHud 
    @choice "Play the game" goto:.MiniGame
    @stop
@else
    Player: "There is nothing i need anymore"
    @goto Map
@endif

#MiniGame
@hideUI PlayerHud
@hidePrinter 
@set ItemTook=true
@goto Map
@stop