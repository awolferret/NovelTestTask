@back CharBack
@char NPC.Default pos:50,0 scale:2,2,2
@if !NPCMet
    @showUI PlayerHud
    @set NPCMet=true
    NPC: "Hello there"
    NPC: "I need your help"
    NPC: "I need you to go to this location and find something for me"
    @set locationOpen=true
    @hidePrinter
@elseif !ItemTook
    @showUI PlayerHud
    NPC: "Please bring me the item"
    @hidePrinter
@else
    @goto FinalChoice
@endif  
@stop